{
    "id": "order-2",
    "customer_account_id": "clifford.test.near",
    "store_account_id": "fabrics-delivery.test.near",
    "status": "PENDING",
    "payload": {
        "token": "usdt.test.near",
        "amount": "50000000",
        "line_items": [
            {
                "count": 1,
                "product_id": "fabrics-delivery.test.near:product-1"
            }
        ]
    }
}


#[derive(BorshDeserialize, BorshSerialize, Deserialize, Serialize)
]
#[serde(crate = "near_sdk::serde")
]
pub struct OrderPayload {
    pub token: String, // This is the stablecoin token - we'll know if it is usdt or inr, cad etc.
    pub amount: String, // this is how much we received in the stablecoin
    pub line_items: Vec<LineItem>,
}

#[derive(BorshDeserialize, BorshSerialize, Deserialize, Serialize)
]
#[serde(crate = "near_sdk::serde")
]
pub struct LineItem {
    pub product_id: String,
    pub count: i32,
}